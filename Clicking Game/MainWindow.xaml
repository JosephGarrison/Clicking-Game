<Window x:Class="Clicking_Game.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Clicking_Game"
        mc:Ignorable="d"
        Title="Clicking Game" Height="350" Width="525">
    <Grid>
        <Canvas Name = "cnvGame" Width =" 500" Height ="280"/>
        <Menu VerticalAlignment ="Top" HorizontalAlignment ="Left" Width=" 525" Height="25">
            <MenuItem Header = "NewGame" Click = "MenuItem_Click" FontWeight="Bold" FontSize="10" ToolTip="Click here to restart " Height="25" Width="84" Background="{x:Null}"/>
        </Menu>
        <TextBlock Name = "txbScore" Text = "Score = 0" Margin = "230,5,194,0" FontWeight="Bold" FontSize="10" TextAlignment="Center" Height="15" VerticalAlignment="Top"/>
        <TextBlock Name = "txbTime" Text = "Time = 0" Margin = "84,5,327,0" FontWeight="Bold" FontSize="10" TextAlignment="Center" Height="13" VerticalAlignment="Top"/>
        <TextBlock Name = "txbHighScore" Text = "High Score = 0" Margin = "380,5,36,0" FontWeight="Bold" FontSize="10" TextAlignment="Center" Height="15" VerticalAlignment="Top"/>
    </Grid>
</Window>
